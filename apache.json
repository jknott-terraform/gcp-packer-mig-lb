{
  "variables": {
        "gcloud_account_json": "terraformaccount.json",
        "gcloud_project_id": "terraform-development-testing"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `gcloud_account_json`}}",
      "project_id": "{{user `gcloud_project_id`}}",
      "ssh_username":"ubuntu",
      "source_image_family": "ubuntu-1604-lts",
      "image_name": "apache-golden-{{timestamp}}",
      "zone": "us-central1-a",
      "machine_type":"f1-micro",
      "disk_size": "20",
      "on_host_maintenance":"TERMINATE",
      "image_family":"apache"
    }
  ],
  "provisioners": [
      {
           "type": "shell",
           "inline": [
                "sudo apt-get clean",
                "sudo apt-get update",
                "sudo apt-get -y upgrade",
                "sudo apt-get -y install apache2 htop stress",
                "sudo ufw allow 'Apache Full'"
           ]
      }
  ]
}
